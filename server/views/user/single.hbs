<div class="container b-3 m-3">
    <h3 class="text-danger">User Information</h3>
    <div class="container">
        <h4 class="text-info">Id:</h4>
        <h5>{{data._id}}</h5>
        <h4 class="text-info">Username</h4>
        <h5>{{data.username}}</h5>
        <h4 class="text-info">Departmant</h4>
        <h5>{{data.departmantSym}}</h5>

        <h4 class="text-info">firstname</h4>
        <h5>{{data.firstname}}</h5>

        <h4 class="text-info">lastname</h4>
        <h5>{{data.lastname}}</h5>

        <h4 class="text-info">wegimail</h4>
        <h5>{{data.wegimail}}</h5>

        <h4 class="text-info">emailAddress</h4>
        <h5>{{data.emailAddress}}</h5>

        <h4 class="text-info">isAdmin</h4>
        <h5>{{data.isAdmin}}</h5>
    </div>
    <div>
        <a href="/user/update/{{data._id}}">
            <button class="btn btn-danger">Update</button>
        </a>
        <a href="/user/delete/{{data._id}}">
            <button class="btn btn-danger">Delete</button>
        </a>
    </div>
</div>